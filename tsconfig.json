{
  "extends": "@plyaz/devtools/configs/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/app/*"],
      "@/components" : ["./src/components"],
      "@/public/*" : ["./public/assets/*"],
      "@/types": ["./src/types"],
      "@/constants" : ["./src/constants"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    ".next/types/**/*.ts",
    "*.ts",
    "./messages/**/*.json"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
